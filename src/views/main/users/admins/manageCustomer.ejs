<% extend("master.ejs") %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý bệnh nhân</h1>
        <div class="my-3">
            <div class="form-row col-10">
                <label for="specializationDoctor">Nhập số điện thoại</label>
                <input id="phone" name="phone" placeholder="Số điện thoại" type="text" class="form-control col-8 mr-4">
                <a class="btn btn-primary" href="#" id="btnSearch">Tìm</a>
            </div>

        </div>
        <a href="/users/manage/customer/create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus-circle fa-sm text-white-50"></i> Thêm mới</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách bệnh nhân</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Số điện thoại</th>
                            <th>Tình trạng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% customers.forEach(function(customer) { %>
                            <tr>
                                <td>
                                    <%= customer.name %>
                                </td>
                                <td>
                                    <%= customer.phone %>
                                </td>
                                <td>
                                    <% if(customer.isActive) { %> Hoạt động
                                        <% } else { %> Không hoạt động
                                            <% } %>
                                </td>
                                <td class="">
                                    <a class="show-customer-info" data-customer-id="<%= customer.id %>" href="#"
                                        title="View info"><i class="fas fa-info-circle"></i></a>
                                    <a class="edit-customer-info" href="/users/customer/edit/<%= customer.id %>"
                                        title="Edit"><i class="fas fa-pen-square mx-3"></i></a>
                                    <a class="delete-customer-info" data-customer-id="<%= customer.id %>" href="#"
                                        title="Delete"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- PHÂN TRANG -->
            <div class="d-flex justify-content-end mt-3">
                <nav>
                    <ul class="pagination">
                        <% if (currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>">«</a>
                            </li>
                            <% } %>

                                <% for (let i=1; i <=totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                        <% if (currentPage < totalPages) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= currentPage + 1 %>">»</a>
                                            </li>
                                            <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="modal fade " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
        id="modalInfoCustomer">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông tin khách</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <label for="nameCustomer" class="col-form-label text-label">Tên</label>
                                            <input type="text" class="form-control" id="nameCustomer" disabled>
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label for="phoneCustomer" class="col-form-label text-label">Số điện
                                                thoại</label>
                                            <input type="text" class="form-control" id="phoneCustomer" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="col-form-label text-label">Hình ảnh</label>
                                        <div id="imageCustomer" class="text-center">
                                            <!-- Thêm hình ảnh tại đây -->
                                            <img src="link-to-image.jpg" alt="Customer Image"
                                                class="img-fluid custom-img-size">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="addressCustomer" class="col-form-label text-label">Địa chỉ</label>
                                    <input type="text" class="form-control" id="addressCustomer" name="addressCustomer"
                                        disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("div #featureManage").addClass('show');
            $("div #featureManage").find($("#aManageCustomer")).addClass("active");
            $(".admin-list-posts").removeClass("active");
        })
    </script>
