<% extend("../app.ejs") %>
<section class="mt-0" style="background-color: #ABF3FD; height: 50px; display: flex; align-items: center;">
    <div class="container-fluid">
        <div class="row align-items-center">
            
            <div class="col-md-2">
                <div class="homepage-logo mt-2">
                    <img class="menu-nav" src="../images/background/DC.png" alt="img logo">
                </div>
            </div>
            
            <div class="col-md-7 d-none d-md-flex justify-content-between">
                <div class="d-flex flex-column">
                    <button class="btn btn-design" onclick="redirectToHome()">Trang chủ</button>
                </div>
                <div class="d-flex flex-column">
                    <button class="btn btn-design" onclick="redirectToSpecializations()">Chuyên khoa</button>
                </div>
                <div class="d-flex flex-column">
                    <button class="btn btn-design" onclick="redirectToDoctors()">Bác sĩ</button>
                </div>
                <div class="d-flex flex-column">
                    <button class="btn btn-warning text-black" onclick="redirectToClinic()">Gói khám</button>
                </div>
                <div class="header-search align-self-center justify-content-center">
                    <i class="fa fa-search"></i>
                    <label for="input-search"></label>
                    <input id="input-search" placeholder="Tìm kiếm...">
                    <div id="show-info-search" class="show-info-search"></div>
                </div>
                <script>
                    function redirectToHome() {
                        window.location.href = "/";
                    }
                    function redirectToSpecializations() {
                        window.location.href = "/all-specializations";
                    }
                    function redirectToDoctors() {
                        window.location.href = "/all-doctors %>" ;
                    }
                    function redirectToClinic() {
                        window.location.href = "/all-clinics";
                    }
                </script>
            </div>
            
            <div class="col-md-3 mt-2 d-none d-md-flex justify-content-between align-self-center justify-content-center">
                    <a href="/login" class="btn btn-design1 ">Đăng nhập</a>
                    <a href="/register" class="btn btn-design2 ">Đăng ký</a>
                <a href="https://www.facebook.com/profile.php?id=100011010698678" target="_blank">
                    <img src="../images/background/Vector.png" alt="Contact logo">
                </a>
            </div>
            
        </div>
    </div>
</section>
<section class="detail-info-specialization">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <a class="text-decoration-none" href="/">Trang chủ </a><span aria-hidden="true">&raquo;</span>
                    <span style="text-transform: uppercase">
                    <%= clinic.name %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="detail-info-clinic mt-3">
    <div class="container">
        <div class="container">
            <div class="row d-flex flex-row">
                <div class="nav flex-column nav-pills col-4" id="v-pills-tab" role="tablist"
                     aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab"
                       aria-controls="v-pills-home" aria-selected="true">LỊCH KHÁM</a>
                    <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab"
                       aria-controls="v-pills-profile" aria-selected="false">GIỚI THIỆU</a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab"
                       aria-controls="v-pills-messages" aria-selected="false">KHÁM VÀ ĐIỀU TRỊ</a>
                </div>
                <div class="tab-content col-8" id="v-pills-tabContent">
                    <div class="tab-pane fade show active col-12" id="v-pills-home" role="tabpanel"
                         aria-labelledby="v-pills-home-tab">
                        <div class="row">
                            <div class="col-12 content-specialization">
                                <% doctors.forEach(function(doctor) { %>
                                    <div class="d-flex flex-row each-doctor-spe">
                                        <div class="left-content col-5 d-flex">
                                            <div class="avatar-doctor-spe">
                                                <img src="/images/users/<%= doctor.User.avatar %>">
                                            </div>
                                            <div class="intro-doctor-spe">
                                                <div class="doctor-name"><%= doctor.User.name %></div>
                                                <div class="doctor-address"><%= doctor.User.address %></div>
                                                <div><a href="/detail/doctor/<%= doctor.User.id %>">Xem chi tiết</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="right-content col-7" id="clinicRightContent">
                                            <div>
                                                <div class="row header-booking">
                                                    <label for="day-book-spe" class="label-booking">LỊCH KHÁM</label>
                                                </div>
                                                <select id="day-book-spe" class="form-control doctor-schedule-spe"
                                                        data-doctor="<%= doctor.User.id %>">
                                                    <% sevenDaySchedule.forEach(function(day) { %>
                                                        <option value="<%= day %>"><%= day %></option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                            <div id="div-schedule-<%= doctor.User.id %>"
                                                 data-doctor-id="<%= doctor.User.id %>"
                                                 class=" d-flex flex-row  flex-wrap text-decoration-none">
                                                <% if(doctor.getDataValue('schedules').length === 0){ %>
                                                    <div class="no-schedule">
                                                        Bác sĩ "<%= doctor.User.name %>" không có lịch hẹn vào ngày
                                                        <b><%= sevenDaySchedule[0] %></b>. Vui lòng chọn ngày khác.
                                                    </div>
                                                <% } %>
                                                <% doctor.getDataValue('schedules').forEach( function(x, index) { %>

                                                    <% if(x.getDataValue("isDisable") === false) { %>
                                                        <div id="spe-btn-modal-<%= x.id %>"
                                                             data-doctor-id="<%= doctor.User.id %>"
                                                             data-date="<%= x.date %>"
                                                             data-time="<%= x.time %>"
                                                             class="text-decoration-none show-modal-at-clinic-page">
                                                            <div class="doctor-time">
                                                                <%= x.time %>
                                                            </div>
                                                        </div>
                                                    <% } %>

                                                    <% if( index === doctor.getDataValue('schedules').length - 1 && x.getDataValue("isDisable") === true){ %>
                                                        <div>
                                                            Không có lịch khám theo lịch trình trong khung thời gian hiện tại. Vui lòng chọn các lịch khám đã lên lịch tiếp theo.
                                                        </div>
                                                    <% } %>
                                                <% }) %>
                                            </div>
                                            <!--<div id="div-more-info-<%= doctor.User.id %>">
                                                <% if(doctor.getDataValue('schedules').length > 0){ %>
                                                    <div class="d-flex flex-column">
                                                        <div>
                                                            <span class="d-block mt-2"> Choose <i class="fa fa-hand-o-up" aria-hidden="true"></i>  and book a free consultation</span>
                                                        </div>
                                                        <div style="border-top: 1px solid #ccc"
                                                             class="d-flex flex-column">
                                                            <span class="d-block pt-3 pb-1"
                                                                  style="text-transform: uppercase">Medical address:</span>
                                                            <span class="d-block pb-1"
                                                                  style="border-bottom: 1px solid #ccc"><%= doctor.User.address %></span>
                                                        </div>
                                                        <span class="d-block pt-2">Price: 50 USD</span>
                                                    </div>
                                                <% } %>
                                            </div>-->

                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel"
                         aria-labelledby="v-pills-profile-tab">
                        <%- clinic.introductionHTML %>
                    </div>
                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel"
                         aria-labelledby="v-pills-messages-tab">
                        <pre><%= clinic.description %></pre>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
     id="modalBookingClinicDoctor">
    <div class="modal-dialog mw-100 w-75" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Đặt lịch hẹn khám bệnh</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-5" style="border-right: 1px solid #ccc;" id="infoDoctorSpe">
                        <label class="text-label" style="padding-top: 7px">Thông tin bác sĩ: </label>
                        <div class="d-flex flex-row">
                            <img class="avatar-doctor-modal" id="modal-avatar-doctor-spe">
                            <div class="ml-3">
                                <span class="d-block" id="doctor-name-spe"></span>
                                <div class="time-booking" id="time-patient-booking"></div>
                                <div class="time-booking" id="date-patient-booking"></div>
                            </div>
                        </div>

                        <div class="mt-4" id="doctor-address-spe">
                        </div>
                        <div class="mt-3">Hẹn lịch miễn phí</div>
                    </div>
                    <div class="col-7">
                        <form id="form-patient-info-spe">
                            <div class="form-group">
                                <label for="patient-name" class="col-form-label text-label">Thông tin bệnh nhân</label>
                                <input type="text" class="form-control" id="name" name="name"
                                       placeholder="Tên">
                                <div class="invalid-feedback">
                                    Tên bệnh nhân không được để trống
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender"
                                           id="selectMale" value="male" checked>
                                    <label class="form-check-label" for="selectMale">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender"
                                           id="selectFemale" value="female">
                                    <label class="form-check-label" for="selectFemale">Nữ</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="phone" name="phone"
                                       placeholder="Số điện thoại">
                                <div class="invalid-feedback"> Số điện thoại không hợp lệ</div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="email" name="email" placeholder="Email">
                                <div class="invalid-feedback"> Email không hợp lệ</div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="year" name="year" placeholder="Năm">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="address" name="address"
                                       placeholder="Địa chỉ">
                            </div>
                            <div class="form-group">
                                <label for="description" class="col-form-label">Lý do khám:</label>
                                <textarea class="form-control" id="description" name="description"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="extraInfo" class="col-form-label">Thông tin bổ sung (tùy chọn)
                                    <span id="viewExtraInfo" class="view viewExtraInfo">(Xem): </span> </label>
                                <div class="extraInfo d-none" id="divExtraInfo">
                                     <textarea class="form-control" id="breath"
                                               placeholder="Ghi chú hồ sơ bệnh án (nếu có)"
                                               name="breath"></textarea>
                                    <div class="form-group">
                                        <label class="mt-2 col-form-label w-100">Đã từng đặt lịch tại (kể từ 15 ngày qua):</label>

                                        <% places.forEach(function(place) { %>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="places"
                                                       id="selectPlace<%= place.id %>" value="<%= place.id %>">
                                                <label class="form-check-label"
                                                       for="selectPlace<%= place.id %>"><%= place.name %></label>
                                            </div>
                                        <% }) %>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="places"
                                                   id="selectNone" value="none" checked>
                                            <label class="form-check-label" for="selectNone">Chưa bao giờ đặt lịch</label>
                                        </div>

                                        <div class="mt-3">
                                            <label>Có lần khám trước:</label>
                                            <div class="d-flex ">
                                                <label class="mr-2" for="oldForms">Đăng tải hình ảnh: </label>
                                                <input name="oldForms" id="oldForms" type="file" accept="image/*"
                                                       multiple>
                                            </div>
                                            <textarea class="form-control mt-2" id="extraOldForms"
                                                      placeholder="Thông tin bổ sung, nếu có"
                                                      name="extraOldForms"></textarea>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div id="processLoading" class="process-loading d-none"><span
                            class="d-block mx-2"> <strong>Đang xử lý</strong></span>
                    <div class="loader"></div>
                </div>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="btn-confirm-booking-spe">Xác nhận lịch hẹn khám bệnh</button>
            </div>
        </div>
    </div>
</div>
