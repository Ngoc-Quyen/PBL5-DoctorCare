<section class="detail-info-specialization">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <a class="text-decoration-none" href="/">Trang chủ </a><span aria-hidden="true">&raquo;</span>
                    <span style="text-transform: uppercase">
                        DANH SÁCH BÁC SĨ
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="detail-info-clinic mt-3">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-8 mx-auto">
                    <h2>Các bác sĩ</h2>
                    <hr>
                    <div>
                        Danh sách bác sĩ trực thuộc phòng khám:

                    </div>
                    <hr>
                    <div class="d-flex flex-row flex-wrap">
                    <% doctors.forEach(function(doctor) { %>
                        <div class="col-6 my-4">
                            <a href="/detail/doctor/<%= doctor.id %>" class="text-decoration-none" style="outline: none">
                                <div class="d-flex flex-column" title="<%= doctor.name%>">
                                    <img style="height: 200px; width: 300px" src="/images/users/<%= doctor.avatar %>" alt="image bla bla">
                                    <h3 class="mt-3" style="font-size: 18px"><%= doctor.name %></h3>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>


            </div>
        </div>
    </div>
    </div>
