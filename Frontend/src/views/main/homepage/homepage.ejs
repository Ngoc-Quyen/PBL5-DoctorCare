<section class="sec-header d-flex flex-column">
    <img src="../images/background/Frame.png" alt="Frame Image" class="frame-image" style="width: 100%;">
    <div class="img-header d-flex flex-column mt-0 align-self-center">
    </div>
    <div class="content-header d-flex  justify-content-between title-and-icon align-items-center align-self-center">
        <div class="d-flex flex-column ml-5 pl-5 align-items-center">
            <i class="fa fa-check"></i>
            <span>Phòng khám uy tín</span>
        </div>
        <div class="d-flex flex-column align-items-center">
            <i class="fa fa-thumbs-up"></i>
            <span>Chất lượng tốt</span>
        </div>
        <div class="d-flex flex-column align-items-center">
            <i class="fa fa-user-md"></i>
            <span>Bác sĩ ưu tú</span>
