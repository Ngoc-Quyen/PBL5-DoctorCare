<% extend("master.ejs") %>
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý kế hoạch</h1>
    <a href="/doctor/manage/schedule/create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus-circle fa-sm text-white-50"></i> Thêm mới</a>
</div>

<!-- Content Row -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kế hoạch</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ngày</th>
                        <th>Kế hoạch</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% sevenDaySchedule.forEach(function(day, index) { %>
                        <tr>
                            <td> <%= day %> </td>
                            <td>
                                <% schedules.forEach(function(schedule) { %>
                                    <% if(schedule.date === day) { %>
                                        <button class="btn btn-outline-warning mr-3 mt-1 mb-3"><%= schedule.time %></button>
                                    <% } %>
                                <% }) %>
                            </td>
                            <td></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

